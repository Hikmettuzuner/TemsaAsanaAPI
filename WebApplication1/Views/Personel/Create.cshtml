@model WebApplication1.Models.Personel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2 style="align-content:center">
                    Personel Ekleme Sayfası
                </h2>
            </div>
            <div class="body">
                @using (Html.BeginForm("Create", "Personel", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <label for="email_address">Asana Kullanıcı Resmi</label>
                    <div class="form-group">
                        <div class="form-line">
                            <input type="file" id="File" name="File" accept=".jpg, .JPG, .PNG, .png, .JPEG" class="form-control">
                        </div>
                    </div>

                    <label for="email_address">Ad Soyad</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.EditorFor(model => model.NameSurname, new { htmlAttributes = new { @class = "form-control", @maxlength = "50", @required = "required" } })
                        </div>
                    </div>
                    <label for="password">Asana Email</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.EditorFor(model => model.PersoEmail, new { htmlAttributes = new { @class = "form-control", @maxlength = "50", @required = "required" } })
                        </div>
                    </div>

                    <label for="password">Asana ID</label>
                    <div class="form-group">
                        <div class="form-line">
                            @Html.EditorFor(model => model.AsanaId, new { htmlAttributes = new { @class = "form-control", @maxlength = "150", @required = "required" } })
                        </div>
                    </div>

                    <br>
                    <input type="submit" class="btn btn-success m-t-15 waves-effect" value="Personel Kaydet">
                }
            </div>
        </div>
    </div>
</div>

